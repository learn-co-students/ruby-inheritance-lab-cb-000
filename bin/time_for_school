#!/usr/bin/env ruby

require_relative "../lib/user.rb"
require_relative "../lib/teacher.rb"
require_relative "../lib/student.rb"

steve = Student.new
steve.first_name = "Steve"
steve.last_name = "Jobs"

allan = Student.new
allan.first_name = "Allan"
allan.last_name = "Glasier"

avi = Teacher.new
avi.first_name = "Avi"
avi.last_name = "Flombaum"


some_knowledge = avi.teach
steve.learn(some_knowledge)
allan.learn(some_knowledge)

some_knowledge = avi.teach
steve.learn(some_knowledge)
allan.learn(some_knowledge)

puts "Steve just learned this important knowledge: '#{steve.knowledge.first}' from Avi"
puts "Allan just learned this important knowledge: '#{allan.knowledge.first}' from Avi"

puts "Steve has learned: #{steve.knowledge.join(", ")}"
puts "Allan has learned: #{allan.knowledge.join(", ")}"
